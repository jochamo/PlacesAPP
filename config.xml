<?xml version="1.0" encoding="utf-8"?>

<widget xmlns = "http://www.w3.org/ns/widgets"
	 xmlns:gap = "http://phonegap.com/ns/1.0"
	 id = "com.jochamo.places"
	 versionCode = "1"
	 version = "0.0.1" >

	<name>Lugares!</name>

	<description>Not a simple application to save important places!</description>

	<author href="http://informatica.desecundaria.com" email="jochamo@gmail.com">
		Jose Chamorro Molina
	</author>

	<access origin="*" />
	<allow-navigation href="*" />
  	<allow-intent href="*" />
	
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-vibration" />
	<plugin name="cordova-plugin-splashscreen" />
	<plugin name="cordova-plugin-geolocation" />
  	<plugin name="cordova-plugin-camera" />
	
	<icon src="img/icon.png" />
	<splash src="img/splash.png" />

    <preference name="phonegap-version" value="cli-9.0.0" />
	
</widget>
